<center>

<h2>Login</h2>

<form class="form login-form">
  <div class="form-group" class="w3-container">
    <label for="email-login">email:</label>
    <input class="form-input input is-small is-size-1" type="text" id="email-login"  placeholder="Enter Email"/>
  </div>
  <div class="form-group">
    <label for="password-login">password:</label>
    <input class="form-input" type="password" id="password-login" />
  </div>
  <div class="form-group">
    <button class="btn btn-primary" type="submit" id="login">login</button>
    
  </div>
</form>

<h2>Sign Up</h2>

<form class="form signup-form">
  <div class="form-group" class="w3-container">
    <label for="email-signup">email:</label>
    <input class="form-input" type="text" id="email-signup" />
  </div>
  <form class="form signup-form">
  <div class="form-group" class="w3-container">
    <label for="username-signup">User Name:</label>
    <input class="form-input" type="text" id="username-signup" />
  </div>
  <div class="form-group">
    <label for="password-signup">password:</label>
    <input class="form-input" type="password" id="password-signup" />
  </div>
  <div class="form-group">
        <button class="btn btn-primary" type="submit" id="signup">sign up</button>
  </div>
</form>


<div class="image"></div>

<script src="/js/login.js"></script>
</center>

