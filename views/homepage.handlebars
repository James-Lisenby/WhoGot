<h1 id="whogot_events">Events</h1>
  <h1 id="hosted_by"> {{event.user.username}}</h1>
  
{{#if eventsExist}}
{{#each userEvents as |event| }}


{{!-- event div --}}
<div class="card" id="event_div">
  <div class="info_div">
    <h2 id="event_name">Event Name: {{event.name}}</h2>
    <h3 id="event_place">Place: {{event.place}}</h3>
    </div>
    <h3 id="event_time">Time: {{event.time}}</h3>
    <div class="col-md-3">
    <h3>Host: {{event.user.username}}</h3>
  </div>
  </div>
{{!-- event div --}}
<h1 id="you_got"> YouGot </h1>
{{#each event.user.items as |item| }}

<div class="requested_items" id="event_div">
  <div class="">
    <h2>{{event.user.items.name}}</h2>
    <ul>{{item.event.name}}
      <li> {{item.name}}</li>
      <li> {{item.user_id}}</li>
      <li> {{item.user.name}}</li>

    </ul>
    
  </div>
  
</div>
{{/each}}
{{/each}}
{{#each userEvents.user.items.event as |event| }}

{{/each}}
{{else}}

{{/if}}

<a href="/new-event">
<h2>You don't have any events yet. Create one!</h2>
  <button class="button" id="add-new-event create_event">Create New Event</button>
</a>